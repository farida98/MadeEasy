<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:fillViewport="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/newcolor"
        tools:ignore="ExtraText"
        android:focusable="true"
        android:focusableInTouchMode="true"
        tools:context=".Ricedishes"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="201dp"
            android:background="@drawable/fastfood_dp" />

        <TextView
            android:id="@+id/ricedish1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/white"
            android:fontFamily="sans-serif"
            android:text="Pizza Fries"
            android:textAlignment="center"
            android:textColor="@color/brown"
            android:textSize="20sp"
            android:textStyle="italic"></TextView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="156dp"
            android:onClick="fpizza"
            android:background="@drawable/p1"
            />
        <TextView
            android:id="@+id/ricedish2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif"
            android:text="Slider Burger"
            android:textAlignment="center"
            android:background="@color/white"
            android:textColor="@color/brown"
            android:textSize="20sp"
            android:textStyle="italic"></TextView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="156dp"
            android:background="@drawable/b1"
            android:onClick="fburger"
            />
        <TextView
            android:id="@+id/ricedish3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif"
            android:text="Chicken Shawarma"
            android:textAlignment="center"
            android:background="@color/white"
            android:textColor="@color/brown"
            android:textSize="20sp"
            android:textStyle="italic"></TextView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="156dp"
            android:background="@drawable/ss1"
            android:onClick="fshawarma"
            />
        <TextView
            android:id="@+id/ricedish4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif"
            android:text="Club Sandwich recipe"
            android:textAlignment="center"
            android:background="@color/white"
            android:textColor="@color/brown"
            android:textSize="20sp"
            android:textStyle="italic"></TextView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="156dp"
            android:background="@drawable/s1"
            android:onClick="fsandwich"
            />
    </LinearLayout>
</ScrollView>