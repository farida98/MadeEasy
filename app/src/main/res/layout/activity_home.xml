<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    android:fillViewport="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/newcolor"
        tools:ignore="ExtraText"
        android:focusable="true"
        android:focusableInTouchMode="true"
        tools:context=".home">


        <Button
            android:id="@+id/btn1"
            android:layout_width="212dp"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:layout_below="@id/text_home"
            android:layout_marginTop="1dp"
            android:background="@color/colorPrimary"
            android:text="Categories"
            android:textSize="20sp"
            android:onClick="category"></Button>

        <Button
            android:id="@+id/btn2"
            android:layout_width="212dp"
            android:layout_height="40dp"
            android:layout_below="@id/text_home"
            android:layout_marginLeft="7dp"
            android:layout_margin="2dp"
            android:layout_marginTop="1dp"
            android:textSize="20sp"
            android:layout_toRightOf="@id/btn1"
            android:background="@color/colorPrimaryDark"
            android:text="Feedback"
            android:onClick="feedback"></Button>

        <Button
            android:id="@+id/btn3"
            android:layout_width="212dp"
            android:layout_height="40dp"
            android:layout_below="@id/btn1"
            android:layout_margin="2dp"
            android:background="@color/colorAccent"
            android:textSize="20sp"
            android:text="Add Recipe"
            android:onClick="add"></Button>

        <Button
            android:id="@+id/btn4"
            android:layout_width="212dp"
            android:layout_height="40dp"
            android:textSize="20sp"
            android:layout_below="@id/btn2"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_margin="2dp"
            android:layout_toRightOf="@id/btn3"
            android:background="@color/peach"
            android:text="Contact us"
            android:onClick="contact"></Button>

        <SearchView
            android:id="@+id/simpleSearchView"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@color/newcolor"
            android:clickable="true"
            android:queryHint="Search recipee here"
            tools:layout_editor_absoluteX="4dp"
            tools:layout_editor_absoluteY="84dp" />


        <Button
            android:id="@+id/SearchButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/simpleSearchView"
            android:onClick="search"
            android:text="Search"
            android:textColor="@color/brown"></Button>

        <ImageView
            android:id="@+id/text_home"
            android:layout_width="match_parent"
            android:layout_height="181dp"
            android:layout_below="@id/simpleSearchView"
            android:layout_marginTop="4dp"
            android:background="@drawable/h2"></ImageView>

        <TextView
            android:id="@+id/today"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/btn3"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif"
            android:text="Today's Recipee"
            android:textAlignment="center"
            android:background="@color/white"
            android:textColor="@color/brown"
            android:textSize="30sp"
            android:textStyle="italic"></TextView>

        <TextView
            android:id="@+id/todayName1"
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/today"
            android:textStyle="italic"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:text="Beef Metaballs"
            android:textColor="@color/brown"
            android:textSize="25sp"></TextView>


        <ImageView
            android:id="@+id/todaypic1"
            android:layout_width="212dp"
            android:layout_height="105dp"
            android:layout_below="@id/todayName1"
            android:onClick="Todaymeat"
            android:layout_margin="2dp"
            android:background="@drawable/meat1"
            ></ImageView>

        <TextView
            android:id="@+id/todayName2"
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/today"
            android:textStyle="italic"
            android:textColor="@color/brown"
            android:layout_marginTop="20dp"
            android:textSize="25sp"
            android:textAlignment="center"
            android:layout_toRightOf="@+id/todayName1"
            android:text="Beef Keema"></TextView>


        <ImageView
            android:layout_width="212dp"
            android:layout_height="105dp"
            android:layout_below="@id/todayName1"
            android:layout_margin="2dp"

            android:onClick="TodayKeema"
            android:layout_toRightOf="@+id/todaypic1"
            android:background="@drawable/meat2"></ImageView>

        <TextView
            android:id="@+id/famous"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/todaypic1"
            android:text="Famous Recipee"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:textColor="@color/brown"
            android:textSize="30sp"
            android:textStyle="italic"
            android:textAlignment="center"
            ></TextView>


        <TextView
            android:id="@+id/todayName3"
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/famous"
            android:text="Pizza Fries"
            android:textStyle="italic"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textColor="@color/brown"
            android:textSize="20sp"></TextView>

        <ImageView
            android:id="@+id/famouspic3"
            android:layout_width="212dp"
            android:layout_height="105dp"
            android:layout_below="@id/todayName5"
            android:layout_marginTop="-1dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/d1"
            android:onClick="TodayDessert"></ImageView>

        <TextView
            android:id="@+id/todayName4"
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/famous"
            android:text="Salmon Fried Rice"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textStyle="italic"
            android:layout_toRightOf="@+id/todayName3"
            android:textColor="@color/brown"
            android:textSize="20sp"></TextView>

        <ImageView
            android:id="@+id/famouspic2"
            android:layout_width="212dp"
            android:layout_height="105dp"
            android:layout_below="@id/todayName4"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/famouspic1"
            android:background="@drawable/rice3"
            android:onClick="Todayrice"></ImageView>

        <TextView
            android:id="@+id/todayName5"
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/famouspic1"
            android:text="Coconut Kheer"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textStyle="italic"
            android:onClick="TodayDessert"
            android:textColor="@color/brown"
            android:textSize="20sp"></TextView>

        <ImageView
            android:id="@+id/famouspic1"
            android:layout_width="212dp"
            android:layout_height="105dp"
            android:layout_below="@id/todayName3"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/p1"
            android:onClick="TodayFries"></ImageView>

        <TextView
            android:id="@+id/todayName6"
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/famouspic2"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/todayName5"
            android:text="Banana pancakes"
            android:textStyle="italic"
            android:textAlignment="center"
            android:textColor="@color/brown"
            android:textSize="20sp"></TextView>

        <ImageView
            android:layout_width="212dp"
            android:layout_height="105dp"
            android:layout_below="@id/todayName6"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="-1dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:layout_toRightOf="@+id/famouspic3"
            android:background="@drawable/bf2"
            android:onClick="TodayBreakfast"></ImageView>


    </RelativeLayout>
</ScrollView>