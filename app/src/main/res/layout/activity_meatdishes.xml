<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:fillViewport="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/newcolor"
        tools:ignore="ExtraText"
        android:focusable="true"
        android:focusableInTouchMode="true"
        tools:context=".Ricedishes"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="201dp"
            android:background="@drawable/meatdish" />

        <TextView
            android:id="@+id/meatdish1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/white"
            android:fontFamily="sans-serif"
            android:text="Beef Keema"
            android:textAlignment="center"
            android:textColor="@color/brown"
            android:textSize="20sp"
            android:textStyle="italic"></TextView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="156dp"
            android:onClick="meat1"
            android:background="@drawable/meat2"
            />
        <TextView
            android:id="@+id/meatdish2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif"
            android:text="Beef Metaballs"
            android:textAlignment="center"
            android:background="@color/white"
            android:textColor="@color/brown"
            android:textSize="20sp"
            android:textStyle="italic"></TextView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="156dp"
            android:onClick="meat2"
            android:background="@drawable/meat1"

            />
        <TextView
            android:id="@+id/meatdish3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif"
            android:text="Slow cooker beef"
            android:textAlignment="center"
            android:background="@color/white"
            android:textColor="@color/brown"
            android:textSize="20sp"
            android:textStyle="italic"></TextView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="156dp"
            android:onClick="meat3"
            android:background="@drawable/meat3"

            />
        <TextView
            android:id="@+id/meatdish4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif"
            android:text="Beaf Stew"
            android:textAlignment="center"
            android:background="@color/white"
            android:textColor="@color/brown"
            android:textSize="20sp"
            android:textStyle="italic"></TextView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="156dp"
            android:onClick="meat4"
            android:background="@drawable/meat4"

            />
    </LinearLayout>
</ScrollView>